
.row
  .col-lg-10.col-lg-offset-1
    %h3 Round: #{@info.round}  
/ .round
  
.row
  .col-lg-10.col-lg-offset-1
    %table.table.table-condensed
      %tr
        %th= 'Player name'
        %th= 'Position'
        %th= 'Overallrating'
        %th= 'Has injury'
      %tr.horizontal-divider 
        %td
        %td
        %td
        %td
      -TeamManagementController.helpers.sort_by_position(@chosenClub.players).each do |position|
        -position.each do |player|
          %tr
            %td= TeamManagementController.helpers.player_name player
            %td= player.position
            %td= player.overallrating
            %td= player.injury
        %tr.horizontal-divider 
          %td
          %td
          %td
          %td      


.form.form-group
  = form_for :players, url: simulation_path do |p|
    %table.table
      %tr
        %td= p.collection_select :id_1, @chosenClub.players, :id, :lastname, {prompt: "Select goalkeeper"}, class: "form-control" 
      %tr
        %td= p.collection_select :id_2, @chosenClub.players, :id, :lastname, {prompt: "Select back"}, class: "form-control" 
        %td= p.collection_select :id_3, @chosenClub.players, :id, :lastname, {prompt: "Select back"}, class: "form-control"
        %td= p.collection_select :id_4, @chosenClub.players, :id, :lastname, {prompt: "Select back"}, class: "form-control"
        %td= p.collection_select :id_5, @chosenClub.players, :id, :lastname, {prompt: "Select back"}, class: "form-control"
      %tr
        %td= p.collection_select :id_6, @chosenClub.players, :id, :lastname, {prompt: "Select midfielder"}, class: "form-control"
        %td= p.collection_select :id_7, @chosenClub.players, :id, :lastname, {prompt: "Select midfielder"}, class: "form-control"
        %td= p.collection_select :id_8, @chosenClub.players, :id, :lastname, {prompt: "Select midfielder"}, class: "form-control"
        %td= p.collection_select :id_9, @chosenClub.players, :id, :lastname, {prompt: "Select midfielder"}, class: "form-control"
      %tr
        %td= p.collection_select :id_10, @chosenClub.players, :id, :lastname, {prompt: "Select striker"}, class: "form-control"
        %td= p.collection_select :id_11, @chosenClub.players, :id, :lastname, {prompt: "Select striker"}, class: "form-control"
    = p.submit 'Simulate'